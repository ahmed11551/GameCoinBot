{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "error",
    "prefer-const": "error",
    "no-var": "error"
  },
  "globals": {
    "process": "readonly",
    "require": "readonly",
    "module": "readonly",
    "__dirname": "readonly",
    "__filename": "readonly"
  }
}
